{
  "steps": [
    {
      "name": "gcr.io/cloud-builders/gsutil",
      "args": [
        "cp",
        "gs://${_MODEL_REPO}/cats_vs_dogs_model.keras",
        "./app/api/model/cats_vs_dogs_model.keras"
      ]
    },
    {
      "name": "gcr.io/cloud-builders/docker",
      "args": [
        "build",
        "-t",
        "${_LOCATION}-docker.pkg.dev/$PROJECT_ID/${_REPOSITORY}/cat-predict-api:0.0.1",
        "./app/api"
      ]
    },
    {
      "name": "gcr.io/cloud-builders/docker",
      "args": [
        "build",
        "-t",
        "${_LOCATION}-docker.pkg.dev/$PROJECT_ID/${_REPOSITORY}/cat-predict-ui:0.0.1",
        "./app/ui"
      ]
    },
    {
      "name": "gcr.io/cloud-builders/docker",
      "args": [
        "push",
        "${_LOCATION}-docker.pkg.dev/$PROJECT_ID/${_REPOSITORY}/cat-predict-api:0.0.1"
      ]
    },
    {
      "name": "gcr.io/cloud-builders/docker",
      "args": [
        "push",
        "${_LOCATION}-docker.pkg.dev/$PROJECT_ID/${_REPOSITORY}/cat-predict-ui:0.0.1"
      ]
    },
    {
      "name": "gcr.io/google.com/cloudsdktool/cloud-sdk",
      "entrypoint": "gcloud",
      "args": [
        "run",
        "deploy",
        "cat-predict-api",
        "--image",
        "${_LOCATION}-docker.pkg.dev/$PROJECT_ID/${_REPOSITORY}/cat-predict-api:0.0.1",
        "--region",
        "us-central1",
        "--platform",
        "managed",
        "--port",
        "5000",
        "--cpu",
        "2",
        "--memory",
        "4G",
        "--allow-unauthenticated"
      ],
      "id": "cat-predict-api-deploy"
    },
    {
      "name": "ubuntu",
      "args": ["sleep", "60"],
      "waitFor": ["cat-predict-api-deploy"],
      "id": "sleep-delay"
    },
    {
      "name": "gcr.io/google.com/cloudsdktool/cloud-sdk",
      "entrypoint": "/bin/sh",
      "args": [
        "-c",
        "gcloud run services list --platform managed --filter=cat-predict-api --format='value(status.url)' > /workspace/api_url.txt"
      ],
      "waitFor": ["sleep-delay"],
      "id": "api-url-extraction"
    },
    {
      "name": "gcr.io/google.com/cloudsdktool/cloud-sdk",
      "entrypoint": "/bin/sh",
      "args": [
        "-c",
        "API_URL=$(cat /workspace/api_url.txt) && gcloud run deploy cat-predict-ui --image ${_LOCATION}-docker.pkg.dev/${PROJECT_ID}/${_REPOSITORY}/cat-predict-ui:0.0.1 --set-env-vars PREDICT_API_URL=$API_URL/predict --region us-central1 --platform managed --port 5000 --cpu 1 --memory 1G --allow-unauthenticated"
      ],
      "waitFor": ["api-url-extraction"]
    }
  ],
  "artifacts": {
    "objects": {
      "location": "gs://${_TEMP_REPO}/",
      "paths": ["/workspace/api_url.txt"]
    }
  },
  "options": {
    "logging": "CLOUD_LOGGING_ONLY"
  }
}
